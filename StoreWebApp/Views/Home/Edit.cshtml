@model StoreWebApp.Models.Product
@{
    ViewBag.Title = "Редактирование товара";
}
    <form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Имя</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Article" class="control-label">Артикул</label>
            <input type="number" asp-for="Article" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label">Цена</label>
            <input type="number" asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Availability" class="control-label">Наличие</label>
            <input type="number" asp-for="Availability" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Размеры (ДxШxВ)</label>
            <input type="text" asp-for="Description" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Image" class="control-label">Изображение</label>
            <input type="text" asp-for="Image" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="IdCategory" class="control-label">Категория</label><br>
            <select asp-for="IdCategory" asp-items="ViewBag.Categories" class="form-control">
                <option selected>Выберите категорию</option>
            </select>
        </div>
        <br><br>
        <div class="form-group">
            <label asp-for="IdRecommendation1" class="control-label">Рекомендация 1</label>
            <input type="number" asp-for="IdRecommendation1" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="IdRecommendation2" class="control-label">Рекомендация 2</label>
            <input type="number" asp-for="IdRecommendation2" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="IdRecommendation3" class="control-label">Рекомендация 3</label>
            <input type="number" asp-for="IdRecommendation3" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </form>
